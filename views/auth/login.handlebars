<section id="authBlock">
    <article class="col-md-4 mx-auto bg-white my-2">
         <h2 class="h2 font-weight-bold text-secondary text-uppercase py-2">login</h2>
         <form action="/auth/login" method="post">
        
         <div class="form-group">
             <label for="email">email</label>
             <input type="email" class="form-control" name="email" id="email" required placeholder="enter email"></div>
         <div class="form-group">
             <label for="password">password</label>
             <input type="password"  class="form-control" id="password" name="password" required placeholder="enter password"></div>
         <div class="form-group">
             <a href="/auth/register"
             class="badge btn-secondary-outline float-right my-2 p-2">register</a>
             </div>
         <div class="form-group">
             <button class="btn btn-primary btn-block my-s">login</button>
             <br>
             </form>
    </article>
</section>