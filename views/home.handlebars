<section class="container my-2">
  <article>

    <div class="card-columns">
      {{#each details}}
        <div class="card">
          <img
            class="card-img-top"
            src="{{trimString emp_photo.0.path}}"
            alt="Card image cap"
          />
          <div class="card-body">
            <h5 class="card-title text-capitalize">{{emp_name}}</h5>
            <p class="card-text">{{emp_mail}}</p>
            <p class="card-text"><small class="text-muted">Last updated {{updatedAt}}
            </small></p>
            <p>
              <a
                href="/employee/{{_id}}"
                class="btn btn-secondary btn-block"
              >View Profile</a>
            </p>
          </div>
        </div>
      {{/each}}
    </div>

  </article>
</section>




